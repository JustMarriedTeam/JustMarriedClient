.modal {

  & > div > div {
    @media (max-width: map(layout, breakpoints, sm)) {
      width: 100% !important;
    }

  }

  &__header {

    padding: 20px 25px !important;

    @media (max-width: map(layout, breakpoints, sm)) {
      padding: 14px 15px !important;
    }

  }

  &__body {

    padding: 10px 5px 15px !important;

    @media (max-width: map(layout, breakpoints, sm)) {
      padding: 0 2px 15px !important;
    }

  }

}
