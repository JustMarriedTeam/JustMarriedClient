.home {

  &__banner {
    width: 100%;
    min-height: 300px;
    background-color: #00bcd4;
    overflow: hidden;
  }

  &__slogan {
    text-align: center;

    h1 {
      margin-top: 0;
    }

    h4 {
      margin-top: -22px;
    }
  }

  &__logo {
    background: url('../../assets/logo2.png') no-repeat;
    width: 128px;
    height: 128px;
    background-size: 100%;
    margin: 0 auto;
  }

}

