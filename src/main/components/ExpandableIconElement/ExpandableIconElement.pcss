.expandable-icon-element {

  display: flex;
  justify-content: space-around;
  align-items: center;

  &__icon {
    flex-basis: content;
  }

  &__element {
    flex-grow: 1;
    overflow: hidden;
    & > * {
      width: 0;
    }
  }

  &--expanded {

    .expandable-icon-element__element {
      & > * {
        width: 100%;
      }
    }

  }

}
